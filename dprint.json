{
  "incremental": true,
  "lineWidth": 160,
  "indentWidth": 2,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle"
  },
  "json": {},
  "markdown": {},
  "toml": {},
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": false,
    "bracketSpacing": true,
    "useTabs": false,
    "htmlWhitespaceSensitivity": "strict"
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml,vue,html}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/.next",
    "**/.turbo",
    "**/dist",
    "pnpm-lock.yaml",
    "**/target"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.83.0.wasm",
    "https://plugins.dprint.dev/json-0.17.0.wasm",
    "https://plugins.dprint.dev/markdown-0.15.2.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm",
    "https://plugins.dprint.dev/prettier-0.32.1.json@19aa403ef0862ba8c41164e3dc6f84c0b7a66c2b11e42726b23dd25e6302ada9"
  ]
}
