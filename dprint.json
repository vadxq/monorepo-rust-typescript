{
  "incremental": true,
  "lineWidth": 160,
  "indentWidth": 2,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle"
  },
  "json": {},
  "markdown": {},
  "toml": {},
  "yaml": {},
  "malva": {},
  "biome": {},
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": false,
    "bracketSpacing": true,
    "useTabs": false,
    "htmlWhitespaceSensitivity": "strict"
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml,vue,ttss,ttml,yaml,css,scss,less,sass}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/.next",
    "**/.turbo",
    "**/dist",
    "pnpm-lock.yaml",
    "**/target"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.91.5.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.2.wasm",
    "https://plugins.dprint.dev/toml-0.6.2.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.4.0.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.11.0.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.5.1.wasm",
    "https://plugins.dprint.dev/biome-0.6.0.wasm",
    "https://plugins.dprint.dev/prettier-0.46.1.json@e5bd083088a8dfc6e5ce2d3c9bee81489b065bd5345ef55b59f5d96627928b7a"
  ]
}
